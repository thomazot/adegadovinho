.logo 
    width: 115px
    display: flex 
    justify-content: center 
    align-items: center 
    
    a 
        display: inline-block
    
    img
        width: 100% 
        height: 100% 
        object-fit: contain
        transition: transition 

    &__title 
        display: none

@media (max-width: 992px)
    .logo
        max-width: 40px
        margin: 10px 0



