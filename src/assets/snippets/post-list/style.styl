.post-list 
    padding: 30px 0

    &__container 
        display: container

    &--margin 
        display: container
        .post-list__container
            padding: 0
            width: auto

    &__footer 
        text-align: center 
        padding: 50px 0

    &__title 
        display: inline-block 
        font-size: 16px
        font-weight: bold 
        padding: 10px 30px 
        border-radius: 4px
        margin: 30px 0

    &__list[data-list=grid] 
        display: flex 
        justify-content: space-between
        align-items: flex-start 
        flex-flow: row wrap
        margin: - (gutter / 2)

    &__item 
        flex: 1 1 330px
        padding: (gutter/2)

        &--empty 
            padding: 0

    &__border 
        border-radius: 3px
        background: #fff

    &__head 
        display: flex 
        justify-content: space-between
        align-items: center

    &__name
        display: block 
        padding: 0 
        font-size: 20px 
        font-weight: bold 
        color: color-one 
        text-transform: uppercase

    &__content 
        padding: 10px 0

    &__info 
        font-size: 11px
        font-weight: regular 
        color: color-two

        a 
            color: color-two

    &__tags 
        a 
            display: inline-block
            padding: 7px 
            border-radius: 4px
            font-size: 12px
            font-weight: bold
            line-height: 1
            background: #e4dda3

    &__description 
        font-size: 12px
        font-weight: regular 
        color: color-two
        padding: 15px 0
        line-height: 1.5

    &__link
        display: block
        height: 350px 
        img 
            object-fit: cover 
            width: 100%
            height: 100% 

    &__button 
        display: inline-block
        border-radius: 4px
        padding: 13px 20px
        font-size: 14px
        font-weight: bold 
        color: #fff

        &:hover 
            color: #fff

[data-list=list]
    margin: -(gutter / 2)

@media (min-width: 992px)
    .post-list 

        &__item
            position: relative 
            z-index: 1
            border-radius: 3px 
            transition: transition 

            &:hover 
                z-index: 2
                box-shadow: 0 0 10px rgba(0,0,0,.2)

    [data-list=list]
        .post-list
            &__border 
                display: flex
                justify-content: space-between
                align-items: center
                margin: 0
                padding: 0

            &__content, &__figure 
                padding: 0
                flex: 1 1 50%

            &__figure 
                max-height: 230px
                img
                    display: flex 
                    justify-content: center 
                    align-items: center 
                    max-height: 230px
                    overflow: hidden

            &__content 
                padding: (gutter/2)

            &__item
                margin: (gutter/2) 0
                padding: (gutter/2) 0
                &:hover 
                    box-shadow: none 

@media (min-width: ( viewport + gutter ))
    .post-list 
        &--margin 
            .post-list__container 
                margin: "0 %s" % -(gutter/2)