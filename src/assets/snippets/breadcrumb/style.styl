.breadcrumb 
    display: container
    display: flex 
    flex-wrap: wrap
    justify-content: flex-start 
    align-items: center
    font-size: 13px
    margin: 25px auto

    &__link 
        color: color-two

    &__current 
        font-weight: bold 

    &__sep 
        display: flex 
        justify-content: center 
        align-items: center
        width: 20px 
        height: 20px 
        border-radius: 50%
        margin: 0 8px
        svg 
            fill: #fff
            margin-right: -2px

@media (min-width: (viewport + gutter))
    .breadcrumb 
        padding: 0