@import 'menu.styl'

.header 
    position: sticky 
    top: 0 
    left: 0 
    z-index: 200

    background: #fff 
        
    &__social
        display: none 
        
    &__container 
        display: container
        display: flex 
        justify-content: space-between
        align-items: center

        transition: transition 

    &__logo 
        display: flex 
        justify-content: center 
        align-items: center
        flex: 1 0 80px
        min-width: 0

    &__search 

        &-container 
            position: fixed 
            top: 0 
            left: 0 
            display: flex 
            justify-content: center 
            align-items: center
            width: 100% 
            height: 100%
            padding: 20px 
            opacity: 0 
            visibility: hidden 

            [aria-hidden=false] &
                opacity: 1 
                visibility: visible

            .search-form
                position: relative 
                z-index: 10

        &-close
            position: fixed 
            top: 0
            left: 0 
            display: block
            width: 100% 
            height: 100% 
            text-align: right
            background: rgba(0,0,0,.5)
            transition: all .2s ease
            opacity: 0

            svg 
                position: fixed 
                top: 20px
                right: 20px
                font-size: 25px

            [aria-hidden=false] &
                opacity: 1


        &-button 
            display: flex 
            justify-content: center 
            align-items: center 
            width: 45px 
            height: 45px
            padding: 0 
            background: #fff 
            color: #333
            border: 0 
            font-size: 20px

            &:hover 
                background: #fff 
                color: #333

        
    
    &__menu
        &-open 
            border: 0

    &__cart a 
        display: flex 
        justify-content: center 
        align-items: center

        width: 45px
        height: 45px

@media desktop 
    .header 
        &__container 
            display: grid
            grid-template-areas: "logo search social cart" "logo menu menu menu"
            grid-template-columns: 165px 1fr auto 45px
            grid-template-rows: 90px 45px
            padding: 0

        &__search, &__social, &__cart
            padding-top: 15px

        &__logo 
            grid-area: logo 
        
        &__search 
            grid-area: search 

            &-container 
                position: static 
                padding: 0
                opacity: 1 
                visibility: visible

            &-close, &-button
                display: none 

        &__social 
            display: block 
            grid-area: social 

        &__cart 
            grid-area: cart 

        &__menu 
            grid-area: menu
