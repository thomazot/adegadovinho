.header__menu 
    &-open 
        padding: 0
        font-size: 24px
        background: none 
        color: color-one 
        border: solid 1px color-one 
        border-radius: 3px
        padding: 5px 10px 
        &:hover 
            background: none 

    &-close 
        position: fixed 
        top: 10px 
        left: calc(100% + 10px)
        
        display: flex 
        justify-content: center 
        align-items: center
        width: 45px
        height: 45px 
        padding: 0 
        border: 0

        background: none 
        
        font-size: 24px

        opacity: 0 
        visibility: hidden
        transition: transition 

        [aria-hidden=false] & 
            opacity: 1 
            visibility: visible 

    &-wrapper
        position: fixed 
        top: 0 
        left: 0 
        z-index: 100
        width: 100% 
        height: 100%
        max-width: 100%
        background: rgba(0, 0, 0, .5)
        opacity: 0 
        visibility: hidden

        transition: transition

        [aria-hidden=false] & 
            opacity: 1 
            visibility: visible 


@media mobile
    [data-fixed=true]
        height: 100%
        overflow: hidden

    .header__menu
        &-container
            position: fixed 
            top: 0 
            left: 0 
            z-index: 200
            width: calc(100% - 65px)
            height: 100% 
            max-width: 320px
            opacity: 0 
            visibility: hidden

            transition: transition
            transform: translateX(-100%)

            .admin-bar & 
                top: 46px 

            .admin-bar[data-scrolling=true] & 
                top: 0
            
            [aria-hidden=false] & 
                opacity: 1 
                visibility: visible 
                transform: translateX(0)
        
        .menu 
            height: 100%
            &__container 
                height: 100% 
                overflow-y: auto
                box-shadow: 0 0 10px rgba(0, 0, 0, .5)
            &__link 
                display: block
                padding: 10px 15px
                color: #fff
            &__sub 
                background: rgba(0, 0, 0, .1)


@media desktop
    .header__menu 
        flex: 1 1 auto 
        min-width: 0
        &-open, &-close, &-wrapper 
            display: none
            
        .menu
            &__container
                display: flex 
                justify-content: space-around

            &__link
                display: inline-block
                padding: 10px 15px 
                font-size: 14px

            &__sub 
                position: absolute 
                transition: transition 
                padding: 15px 0
                border-radius: 3px
                box-shadow: 0 0 10px rgba(0,0,0,.2)
                background: #fff
                opacity: 0 
                visibility: hidden 

            &__item 
                &--0 
                    > .menu__link 
                        display: flex 
                        justify-content: center 
                        align-items: center 
                        height: 100%

                        font-size: 14px
                        font-weight: bold
                        text-align: center

                    &:hover 
                        .menu__sub 
                            opacity: 1 
                            visibility: visible