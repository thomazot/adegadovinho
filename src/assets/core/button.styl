$button 
    display: inline-block
    cursor: pointer 
    
    border: 0
    border-radius: 4px 
    padding: 14px 20px

    color: #fff
    font-size: 14px 
    font-weight: semi-bold

    transition: transition

button 
    @extends $button

.button 
    @extends $button

    &--blank 
        background: #fff
        color: color-one 

input
    &[type=submit]
        @extends $button